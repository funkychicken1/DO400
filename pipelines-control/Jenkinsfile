pipeline {
   agent {
      node { 
         label 'nodejs' 
      }
   }
   stages {
      stage ('Checkout') {
         steps {
            git branch: 'main',
                url: 'https://github.com/funkychicken1/DO400.git' 
         } 
      }
      stage ('Backend Tests') {
         steps {
            sh 'node ./pipelines-control/backend/test.js'
         }
      }
      stage ('Frontend Tests') {
         steps {
            sh 'node ./pipelines-control/frontend/test.js'
         }
      }
   }
}
